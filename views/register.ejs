<%- include ("./messages") %>
<%- include("partials/header_log.ejs"); %>

<form action="/auth/register" method="POST" class="register__container mx-auto" style="margin-top:200px; margin-bottom: 20px; ">
    <!-- Avatar -->
      <img src="/assets/cooking.png" alt="Logo" class="register__container-logo" />

    <!-- Subtitle-->
    <h2 class="register__container-title">
      Register New User
    </h2>

    <!-- Input name -->
    <label for="register__container-input-title">Name</label>
    <input type="name" id="name" name="name" class="register__container-input" placeholder="Enter Name"
      value="<%= typeof name != 'undefined' ? name : '' %>" />
 
    <!-- Input email -->
    <label for="register__container-input-title">Email</label>
    <input type="email" id="email" name="email" class="register__container-input" placeholder="Enter Email"
      value="<%= typeof email != 'undefined' ? email : '' %>" />
  
    <!-- Input password -->
    <label for="register__container-input-title">Password</label>
    <input type="password" id="password" name="password" class="register__container-input" placeholder="Enter Password" 
      value="<%= typeof password != 'undefined' ? password : '' %>" />
  
    <!-- Confirm input password -->
    <label for="register__container-input-title">Confirm Password</label>
    <input type="password" id="password2" name="password2" class="register__container-input" placeholder="Confirm Password" 
      value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
    
    <!-- Register CTA-->
    <button type="submit" style="background-color: orangered; border: 0ch;" class="btn btn-primary btn-block register__container-cta register__container-cta--register">Register
    </button>

    <!-- -->
    <span class="register__container-bottom-link">Already have an account? <a href="/auth/login">Login</a></span>
</form>

</div>
</div>
</div>